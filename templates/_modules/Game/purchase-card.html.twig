<div class="col-lg-3 col-md-6">
    <div class="panel panel-yellow">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-3">
                    <i class="fa fa-money fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                    <div class="huge">{% trans from "game" %}Purchases{% endtrans %}</div>
                </div>
            </div>
        </div>
        {% include '_modules/Purchase/number-of-purchases.html.twig' with {'game': entity} only %}
        {% include '_modules/Purchase/current-steam-price.html.twig' with {'game': entity} only %}
        {% include '_modules/Purchase/overall-costs.html.twig' with {'game': entity} only %}
        {% include '_modules/Purchase/costs-per-hour.html.twig' with {'game': entity} only %}
        <a href="{{ path('purchase_create_for_game', {'id': entity.id }) }}">
            <div class="panel-footer">
                <span class="pull-left">{% trans from "game" %}Create New Purchase{% endtrans %}</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
        <a href="{{ path('purchase_list_for_game', { 'id': entity.id }) }}">
            <div class="panel-footer">
                <span class="pull-left">{% trans from "game" %}View All Purchases{% endtrans %}</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div>
</div>