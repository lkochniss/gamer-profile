<div class="col-lg-3 col-md-6">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-3">
                    <i class="fa fa-steam fa-5x" aria-hidden="true"></i>
                </div>
                <div class="col-xs-9 text-right">
                    <div class="huge">{% trans from "game" %}Information{% endtrans %}</div>
                </div>
            </div>
        </div>
        <a target="_blank" href="http://store.steampowered.com/app/{{ entity.steamAppId }}">
            <div class="panel-footer">
                <span class="pull-left">{% trans from "game" %}SteamAppId{% endtrans %}</span>
                <span class="pull-right">{{ entity.steamAppId }}</span>
                <div class="clearfix"></div>
            </div>
        </a>
        <div class="panel-footer">
            <span class="pull-left">{% trans from "game" %}created at{% endtrans %}</span>
            <span class="pull-right">{{ entity.createdAt|date("d.m.Y H:i") }}</span>
            <div class="clearfix"></div>
        </div>
        <div class="panel-footer">
            <span class="pull-left">{% trans from "game" %}last update{% endtrans %}:</span>
            <span class="pull-right">{{ entity.modifiedAt|date("d.m.Y H:i") }}</span>
            <div class="clearfix"></div>
        </div>
        {% if entity.hasBoughtAt  %}
            <div class="panel-footer">
                <span class="pull-left">{% trans from "game" %}bought at{% endtrans %}:</span>
                <span class="pull-right">{{ entity.boughtAt|date("d.m.Y") }}</span>
                <div class="clearfix"></div>
            </div>
        {% endif %}
        <a href="{{ path('game_update_steam_information', {'id': entity.id}) }}">
            <div class="panel-footer">
                <span class="pull-left">{% trans from "game" %}Update Information{% endtrans %}</span>
                <span class="pull-right"><i class="fa fa-refresh"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div>
</div>