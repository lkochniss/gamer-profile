{% if entity.blogPosts| length > 0 %}
    <div class="row">
        <h3 class="col">{% trans from 'messages' %}latest_posts{% endtrans %}</h3>
    </div>
    {% for post in entity.blogPosts | reverse | slice(0,10) %}
        <div class="row">
            <div class='col'>
                <a class='float-left' href='{{ path('blog_post_show', {'gameSlug': entity.slug, 'blogPostSlug':  post.slug }) }}'>{{ post.title }}</a>
                <div class='text-right'>
                    {{ post.createdAt|date('d.m.Y H:i') }}
                </div>
            </div>
        </div>
    {% endfor %}
{% endif %}
{% if entity.blogPosts| length > 10 %}
    <div class="row">
        <div class="col">
            <a class="btn btn-block btn-light"
               href="{{ path('blog_post_list_frontend', {'gameSlug': entity.slug}) }}">{% trans from 'messages' %}show_all{% endtrans %}</a>
        </div>
    </div>
{% endif %}
