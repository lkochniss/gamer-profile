<div>
    <img src="{{ game.headerImagePath }}" alt="{{ game.name }}" class="img-fluid"/>
</div>
<h3>{{ game.name }}</h3>
{% set lastSession = game.gameSessions | last %}

{% if lastSession %}
    <li>{% trans with {
        '%date%' : lastSession.createdAt |date("d.m.Y"),
        '%time%' : lastSession.duration |convertRecentTime
    } from "game" %}
        last played on %date% for %time%
    {% endtrans %}
    </li>
{% endif %}
<li>{% trans with {'%time%' : game.recentlyPlayed | convertRecentTime } from "game" %}played for %time% recently{% endtrans %}</li>
<li>{% trans with {'%time%' : game.timePlayed | convertOverallTime } from "game" %}played for %time% since purchase{% endtrans %}</li>

{% include '_modules/game/blogPosts.html.twig' with {'blogPosts': game.blogPosts} %}
