{% include 'base.html.twig' %}
{% block body %}
<div class="container embed-responsive">
    {% include '_modules/infotext.html.twig' %}
    {% include '_modules/navigation.html.twig' %}
    <div class="gamer-profile-most-played">
        <h2>{% trans from "game" %}most_played.title{% endtrans %}</h2>
        <hr/>
        {% for key, game in games %}
            {% if key % 2 == 0 %}
                <div class="row">
            {% endif %}
            <div class="col-lg-6 col-md col-sm">
                {% include '_modules/game/gameDetailCard.html.twig' with {'game': game } %}
            </div>
            {% if key % 2 == 1 %}
                </div>
            {% endif %}
        {% endfor %}
        {% include '_modules/filler.html.twig' with {'entity': games } %}
    </div>
</div>
{% endblock %}
