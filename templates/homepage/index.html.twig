{% include 'base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="gamer-profile-most-played">
            <h2>{% trans from "game" %}most_played.title{% endtrans %}</h2>
            <hr/>
            <div class="row">
                {% for game in games.mostPlayed %}
                    <div class="col">
                        {% include '_modules/game/mostPlayedOverview.html.twig' with {'game': game } %}
                    </div>
                {% endfor %}
                {% include '_modules/filler.html.twig' with {'entity': games.mostPlayed } %}
            </div>
        </div>
        <div class="gamer-profile-recently-played">
            <h2>{% trans from "game" %}recently_played.title{% endtrans %}</h2>
            <hr />
            <div class="row">
                {% for game in games.recentlyPlayed %}
                    <div class="col">
                        {% include '_modules/game/recentlyPlayedOverview.html.twig' with {'game': game } %}
                    </div>
                {% endfor %}
                {% include '_modules/filler.html.twig' with {'entity': games.recentlyPlayed } %}
            </div>
        </div>
    </div>
{% endblock %}
