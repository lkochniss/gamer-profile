{% include 'base.html.twig' %}
{% block body %}
    <p>
    <h2>{% trans from "game" %}most_played.title{% endtrans %}</h2>
    {% for game in games.mostPlayed %}
        <h3>{{ game.name }}</h3>
        <img src="{{ game.headerImagePath }}"/>
        {% trans with {'%time%' : game.timePlayed } from "game" %}overall played for %time%{% endtrans %}
    {% endfor %}
    </p>
    <p>
    <h2>{% trans from "game" %}recently_played.title{% endtrans %}</h2>
    {% for game in games.recentlyPlayed %}
        <h3>{{ game.name }}</h3>
        <img src="{{ game.headerImagePath }}"/>
        {% trans with {'%time%' : game.recentlyPlayed } from "game" %}played for %time% recently{% endtrans %}
    {% endfor %}
    </p>
{% endblock %}
