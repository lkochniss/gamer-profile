{% extends 'admin-base.html.twig' %}
 {% block stylesheets %}
     {{ parent() }}
     <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css">
 {% endblock %}
{% block body %}
    <h1>
        {{ game.name }}
        <a href="{{ path('game_dashboard', {'id' game.id}) }}">{% trans from 'game' %}Dashboard{% endtrans %}</a>
    </h1>
    <table id="purchase-list" class="table">
        <thead>
        <tr>
            <th scope="col">
                {% trans from 'purchase' %}Type{% endtrans %}
            </th>
            <th scope="col">
                {% trans from 'purchase' %}Notice{% endtrans %}
            </th>
            <th scope="col">
                {% trans from 'purchase' %}Price{% endtrans %}
            </th>
            <th scope="col">
                {% trans from 'purchase' %}bought at{% endtrans %}
            </th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for purchase in entities %}
            <tr>
                <td scope="col">
                    {{ purchase.type }}
                </td>
                <td scope="col">
                    {{ purchase.notice }}
                </td>
                <td scope="col">
                    {{ purchase.price }} {{ purchase.currency }}
                </td>
                <td scope="col">
                    {{ purchase.boughtAt|date('d.m.Y') }}
                </td>
                <td scope="col">
                    <a class="float-right"
                       href="{{ path('purchase_edit', {'id': purchase.id}) }}">{% trans from 'purchase' %}edit{% endtrans %}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#purchase-list').DataTable({
                'order': [[4, 'desc']]
            });
        });
    </script>
{% endblock %}
