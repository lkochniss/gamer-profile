{% set gameSessions = gameStats | get_game_sessions %}
{% if gameSessions %}
    {% set max = gameSessions|first.duration %}
    {% for gameSession in gameSessions %}
        {% if gameSession.duration > max %}
            {% set max = gameSession.duration %}
        {% endif %}
    {% endfor %}

    <div class="panel-footer">
        <span class="pull-left">{% trans from "messages" %}longest_session{% endtrans %}</span>
        <span class="pull-right">{{ max|convert_recent_time }}</span>
        <div class="clearfix"></div>
    </div>
{% endif %}
