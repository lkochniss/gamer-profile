{% extends 'admin-base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row mb-3">
            <div class="col">
                <h1>{% trans from "messages" %}settings{% endtrans %}</h1>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>{% trans from "messages" %}steam_api_key{% endtrans %}</label>
                {{ form_widget(form.steamApiKey) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>{% trans from "messages" %}steam_user_id{% endtrans %}</label>
                {{ form_widget(form.steamUserId) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>{% trans from "messages" %}steam_user_name{% endtrans %}</label>
                {{ form_widget(form.steamUserName) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>{% trans from "messages" %}ga_tracking{% endtrans %}</label>
                {{ form_widget(form.gaTracking) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>{% trans from "messages" %}default_currency{% endtrans %}</label>
                {{ form_widget(form.defaultCurrency) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-2">
                {{ form_row(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
