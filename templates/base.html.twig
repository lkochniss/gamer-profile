<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/application.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap-3.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/sb-admin-2.css') }}">
        <link rel="stylesheet" type="text/css"
              href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/metis-menu.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/morris.css') }}">
    {% endblock %}
    <script async src="https://www.googletagmanager.com/gtag/js?id={{ ga_tracking }}"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', '{{ ga_tracking }}');
    </script>
</head>
<body>
{% include '_modules/infotext.html.twig' %}
<div class="wrapper">
    <nav class="navbar navbar-default navbar-static-top"
         role="navigation">
        <div class="navbar-header navbar-nav">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand nav-link" target="_blank"
               href="https://github.com/lkochniss/gamer-profile/releases/tag/0.3">
                Gamer Profile {{ current_version }}</a>
        </div>
        <div class="navbar-default sidebar" role="navigation">

            <div class="sidebar-nav navbar-collapse">
                <ul class="nav in" id="side-menu">
                    <li class="nav-item">
                        <a class="nav-link"
                           href="{{ path('homepage_recently_played') }}"><i class="fa fa-clock-o fa-2x"
                                                                          aria-hidden="true">
                                {% trans from "navigation" %}Recently Played{% endtrans %}</i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           href="{{ path('homepage_most_played') }}"> <i class="fa fa-line-chart fa-2x" aria-hidden="true">
                                {% trans from "navigation" %}Most Played{% endtrans %}</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           href="{{ path('homepage_newest_games') }}"> <i class="fa fa-star fa-2x" aria-hidden="true">
                                {% trans from "navigation" %}New Games{% endtrans %}</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           href="{{ path('game_list_frontend') }}"> <i class="fa fa-list fa-2x" aria-hidden="true">
                                {% trans from "navigation" %}Game List{% endtrans %}</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           target="_blank" href="https://steamcommunity.com/id/{{ steam_user_name }}">
                            <i class="fa fa-steam fa-2x" aria-hidden="true">
                                {% trans from "navigation" %}Steam Profile{% endtrans %}</i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div id="page-wrapper">
        {% block body %}

        {% endblock %}
    </div>
</div>
</body>
{% block javascripts %}
    <script src="{{ asset('js/application.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <script src="{{ asset('js/bootstrap-3.js') }}"></script>
    <script src="{{ asset('js/metis-menu.js') }}"></script>
    <script src="{{ asset('js/raphael.js') }}"></script>
    <script src="{{ asset('js/morris.js') }}"></script>
    <script src="{{ asset('js/sb-admin-2.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var image = $('img');
            image.addClass('img-fluid');
            image.removeAttr('style');
        });
    </script>
{% endblock %}
</html>
