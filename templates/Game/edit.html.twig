{% extends 'admin-base.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ entity.name }}</h1>
        </div>
    </div>
    {{ form_start(form) }}
    <div class="row">
        <div class="col huge">
            {{ form_label(form.boughtAt) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_widget(form.boughtAt) }}
        </div>
    </div>
    <div class="row">
        <div class="col huge">
            {{ form_label(form.description) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_widget(form.description) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.submit) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.ckeditor.com/4.8.0/standard/ckeditor.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            CKEDITOR.replace('game_description',{
              'entities': false
            });
        });
    </script>
{% endblock %}
