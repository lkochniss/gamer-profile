{% extends 'admin-base.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ entity.name }}</h1>
        </div>
    </div>
    {{ form_start(form) }}
    <div class="row">
        <div class="col text-right col-form-label">
            <label>{% trans from "messages" %}bought_at{% endtrans %}</label>
        </div>
        <div class="col-md-2">
            {{ form_widget(form.boughtAt) }}
        </div>
        <div class="col">
            {{ form_row(form.submit) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
