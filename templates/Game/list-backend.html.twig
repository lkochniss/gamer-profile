{% extends 'admin-base.html.twig' %}
{% block body %}
    <table id="game-list-backend" class="table">
        <thead>
        <tr>
            <th scope="col">
                {% trans from 'messages' %}name{% endtrans %}
            </th>
            <th scope="col">
                {% trans from 'messages' %}updated_at{% endtrans %}
            </th>
            <th scope="col">
                {% trans from 'messages' %}played_for{% endtrans %}
            </th>
            <th scope="col">
                {% trans from 'messages' %}last_played{% endtrans %}
            </th>
            <th scope="col">
                {% trans from 'messages' %}number_of_sessions{% endtrans %}
            </th>
            <th scope="col">
                {% trans from 'messages' %}number_of_blog_posts{% endtrans %}
            </th>
        </tr>
        </thead>
        <tbody>
        {% for game in entities %}
            <tr>
                <td>
                    <a href="{{ path('game_dashboard', {'id': game.id}) }}">{{ game.name }}</a>
                </td>
                <td data-order="{{ game.modifiedAt | date('Y-m-d') }}">
                    {{ game.modifiedAt|date('d.m.Y H:i') }}
                </td>
                <td data-order="{{ game.timePlayed }}">
                    {% if game.timePlayed > 0 %}
                        {{ game.timePlayed | convert_overall_time }}
                    {% else %}
                        -
                    {% endif %}
                </td>

                {% set lastSession = game.gameSessions | last %}
                {% if lastSession %}
                    <td data-order="{{ lastSession.createdAt | date('Y-m-d') }}">
                        {{ lastSession.createdAt |date('d.m.Y') }}
                    </td>
                {% else %}
                    <td data-order="0">
                        -
                    </td>
                {% endif %}
                <td data-order="0">
                    {{ game.gameSessions | length }}
                </td>
                <td>
                    {{ game.blogPosts|length }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
