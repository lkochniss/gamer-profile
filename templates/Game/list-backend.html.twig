{% include 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6">
                {% trans from 'game' %}name{% endtrans %}
            </div>
            <div class="col">
                {% trans from 'game' %}modified at{% endtrans %}
            </div>
            <div class="col">
                {% trans from 'game' %}number of blogposts{% endtrans %}
            </div>
            <div class="col"></div>
        </div>
        <hr/>
        {% for game in entities %}
            <div class="row">
                <div class="col-6">
                    {{ game.name }}
                </div>
                <div class="col">
                    {{ game.modifiedAt|date('d.m.Y H:i') }}
                </div>
                <div class="col">
                    {{ game.blogPosts|length }}
                </div>
                <div class="col">
                    <a class="float-right"
                       href="{{ path('game_edit', {'id': game.id}) }}">{% trans from 'game' %}edit{% endtrans %}</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
