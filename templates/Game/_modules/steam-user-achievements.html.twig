<div class="panel-footer">
    <span class="pull-left">{% trans from "messages" %}achievements{% endtrans %}</span>
    <a target="_blank"
       href="https://steamcommunity.com/id/{{ steam_user_name }}/stats/{{ game.steamAppId }}/achievements">
        <span class="pull-right">
            {{ game.playerAchievements }} / {{ game.overallAchievements }}
            {% set percentage = game.playerAchievements / game.overallAchievements  * 100 %}
            ({{ percentage|round(2) }}%)
        </span>

    </a>
    <div class="clearfix"></div>
</div>

