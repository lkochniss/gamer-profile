{% extends 'admin-base.html.twig' %}
{% block body %}

<div class="row mb-4">
    <div class="col">
        <div class="row">
            <div class="col">
                <h1 class="page-header">
                    {{ entity.name }}
                    <a href="{{ path('game_edit', {'id': entity.id}) }}">edit</a>
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <img class="thumbnail" src="{{ entity.headerImagePath }}"/>
            </div>
        </div>
    </div>
    <div data-game-id="{{ entity.id }}" class="col" id="playtime-game">
        <h3>{% trans %}playtime_game{% endtrans %}</h3>
    </div>
</div>
<div class="row">
    {% include '_modules/Game/information-card.html.twig' %}
    {% include '_modules/Game/session-card.html.twig' %}
    {% include '_modules/Game/blog-post-card.html.twig' %}
    {% include '_modules/Game/purchase-card.html.twig' %}
</div>
{% endblock %}
