{% include 'base.html.twig' %}
{% block body %}
    <div class="container embed-responsive">
        <div class="row">
            <h1 class="col">{{ entity.name }}</h1>
        </div>
        <hr/>
        <div class="row">
            <h3 class="col">{% trans from 'game' %}player stats{% endtrans %}</h3>
        </div>
        <hr/>
        {% if entity.blogPosts| length > 0 %}
            <div class="row">
                <h3 class="col">{% trans from 'game' %}latest posts{% endtrans %}</h3>
            </div>
            <div class="row">
                {% for post in entity.blogPosts | reverse | slice(0,10) %}
                    <div class='col'>
                        <a class='float-left' href='{{ path('blog_show', {'id':  post.id }) }}'>{{ post.title }}</a>
                        <div class='text-right'>
                            {{ post.createdAt|date('d.m.Y H:i') }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        {% if entity.blogPosts| length > 10 %}
            <div class="row">
                <div class="col">
                    <a class="btn btn-block btn-light"
                       href="{{ path('blog_frontend_list', {'id': entity.id}) }}">{% trans from 'game' %}show all{% endtrans %}</a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
{% block javascripts %}
{% endblock %}
