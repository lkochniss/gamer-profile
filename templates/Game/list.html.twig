{% extends 'base.html.twig' %}
{% block body %}
    <table id="game-list-backend" class="table">
        <thead>
        <tr>
            <th scope="col">
                {% trans from 'messages' %}name{% endtrans %}
            </th>
            <th scope="col">
                {% trans from 'messages' %}bought_at{% endtrans %}
            </th>
            <th scope="col">
                {% trans from 'messages' %}bought_for{% endtrans %}
            </th>
            <th scope="col">
                {% trans from 'messages' %}played_for{% endtrans %}
            </th>
            <th scope="col">
                {% trans from 'messages' %}last_played{% endtrans %}
            </th>
            <th scope="col">
                {% trans from 'messages' %}number_of_sessions{% endtrans %}
            </th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <a href="{{ path('game_dashboard', {'id': entity.game.id}) }}">{{ entity.game.name }}</a>
                </td>
                {% if entity.gamePurchase %}
                    <td data-order="{{ entity.gamePurchase.boughtAt | date('Y-m-d') }}">
                        {{ entity.gamePurchase.boughtAt |date('d.m.Y') }}
                    </td>
                    <td data-order="{{ entity.gamePurchase.price }}">
                        {{ entity.gamePurchase.price }}{{ entity.gamePurchase.currency|trans }}
                    </td>
                {% else %}
                    <td data-order="0">
                        -
                    </td>
                    <td data-order="0">
                        -
                    </td>
                {% endif %}

                <td data-order="{{ entity.playtime.overallPlaytime }}">
                    {% if entity.playtime.overallPlaytime > 0 %}
                        {{ entity.playtime.overallPlaytime | convert_overall_time }}
                    {% else %}
                        -
                    {% endif %}
                </td>

                {% set lastSession = entity.gameSessions | last %}
                {% if lastSession %}
                    <td data-order="{{ lastSession.createdAt | date('Y-m-d') }}">
                        {{ lastSession.createdAt |date('d.m.Y') }}
                    </td>
                {% else %}
                    <td data-order="0">
                        -
                    </td>
                {% endif %}
                <td>
                    {{ entity.gameSessions | length }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
