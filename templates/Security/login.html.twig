{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center">
        <form method="post">
            <h1 class="h3 mb-3 font-weight-normal">{% trans %}login_gamer_profile{% endtrans %}</h1>

            <label for="email" class="sr-only">Email</label>
            <input type="email" name="email" id="email" class="form-control"
                   placeholder="{% trans %}email{% endtrans %}" required autofocus>

            <label for="password" class="sr-only">{% trans %}password{% endtrans %}</label>
            <input type="password" name="password" id="password" class="form-control mb-3"
                   placeholder="{% trans %}password{% endtrans %}" required>

            <div class="form-check" >
                <input type="checkbox" name="_remember_me" id="remember_me" >
                <label for="remember_me">{% trans %}remember_me{% endtrans %}</label>
            </div>


            <input type="hidden" name="_csrf_token" value="{{ csrf_token('login') }}">
            <button class="btn btn-primary form-control" type="submit">
                {% trans %}login{% endtrans %}
            </button>
            <a href="{{ path('security_registration') }}">{% trans %}or_registration{% endtrans %}</a>
        </form>
    </div>
{% endblock %}
