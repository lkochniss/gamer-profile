{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="col-md-3 offset-md-4">
            <form action="{{ path('security_login_check') }}" method="post">
                <h2>{% trans from "messages" %}login{% endtrans %} </h2>

                <div class="form-group">
                    <input type="text" id="username" class="form-control" name="_username" placeholder="{% trans from "messages" %}username{% endtrans %}"/>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" name="_password" placeholder="{% trans from "messages" %}password{% endtrans %}"/>
                </div>
                <div class="input-group">
                    <input type="hidden" name="_csrf_security_token"
                           value="{{ csrf_token(csrf_security_login_token) }}">
                </div>
                <div class="input-group pull-right">
                    <input type="submit" class="form-control btn-primary"
                           value="{% trans from "messages" %}submit{% endtrans %}"/>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
