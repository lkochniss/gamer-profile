<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="/css/application.css">
        <link rel="stylesheet" type="text/css"
              href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css">
        <link rel="stylesheet" type="text/css" href="/css/bootstrap-3.css">
        <link rel="stylesheet" type="text/css" href="/css/sb-admin-2.css">
        <link rel="stylesheet" type="text/css"
              href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="/css/metis-menu.css">
        <link rel="stylesheet" type="text/css" href="/css/morris.css">
    {% endblock %}
    <script async src="https://www.googletagmanager.com/gtag/js?id={{ ga_tracking }}"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }

        gtag('js', new Date());

        gtag('config', '{{ ga_tracking }}');
    </script>
</head>
<body>
{% include '_modules/infotext.html.twig' %}
<div class="wrapper">
    <nav class="navbar navbar-default navbar-static-top"
         role="navigation">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <div class="navbar-header navbar-nav">
            <a class="navbar-brand nav-link" target="_blank"
               href="https://github.com/lkochniss/gamer-profile/releases/tag/0.3">
                Gamer Profile {{ current_version }}</a>
        </div>
        <div class="nav navbar-top-links navbar-right   ">
            <li class="nav-item ">
                <a class="nav-link"
                   href="{{ path('security_logout') }}"><i class="fa fa-sign-out fa-fw"></i>
                    {% trans from "navigation" %}logout{% endtrans %}
                </a>
            </li>
        </div>
        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav in" id="side-menu">
                    <li class="nav-item">
                        <a class="nav-link"
                           href="{{ path('game_list_backend') }}"> <i class="fa fa-steam fa-2x" aria-hidden="true">
                                {% trans from "navigation" %}Games{% endtrans %}</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           href="{{ path('game_session_list_backend') }}"> <i class="fa fa-clock-o fa-2x"
                                                                              aria-hidden="true">
                                {% trans from "navigation" %}Game Sessions{% endtrans %}</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           href="{{ path('blog_post_list_backend') }}"><i class="fa fa-file-text fa-2x"
                                                                          aria-hidden="true">
                                {% trans from "navigation" %}Blog Posts{% endtrans %}</i>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           href="{{ path('purchase_list_backend') }}"> <i class="fa fa-money fa-2x" aria-hidden="true">
                                {% trans from "navigation" %}Purchases{% endtrans %}</i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div id="page-wrapper">
        {% block body %}

        {% endblock %}
    </div>
</div>
</body>
{% block javascripts %}
    <script src="/js/application.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <script src="/js/bootstrap-3.js"></script>
    <script src="/js/metis-menu.js"></script>
    <script src="/js/raphael.js"></script>
    <script src="/js/morris.js"></script>
    <script src="/js/sb-admin-2.js"></script>
    <script src="/js/select2.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var image = $('img');
            image.addClass('img-fluid');
            image.removeAttr('style');
        });
    </script>
{% endblock %}
</html>
